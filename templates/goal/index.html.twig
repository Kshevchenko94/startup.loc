{% extends 'base.html.twig' %}

{% block title %}Goal index{% endblock %}

{% block body %}
    <h1>Goal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Athor</th>
                <th>Date_created</th>
                <th>Price</th>
                <th>Deadline</th>
                <th>Term</th>
                <th>Is_private</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for goal in goals %}
            <tr>
                <td>{{ goal.id }}</td>
                <td>{{ goal.title }}</td>
                <td>{{ goal.created.username }}</td>
                <td>{{ goal.dateCreated|date("m/d/Y") }}</td>
                <td>{{ goal.price }}</td>
                <td>{{ goal.deadline|date("m/d/Y") }}</td>
                <td>{{ goal.term }}</td>
                <td>{{ goal.isPrivate ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('goal_show', {'id': goal.id}) }}">show</a>
                    <a href="{{ path('goal_edit', {'id': goal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('goal_new') }}">Create new</a>
{% endblock %}
